{# empty Twig template #}
{# PlatformBundle/Resources/views/layout.html.twig #}

{% extends "CoreBundle::layout.html.twig" %}
{% block core_header %}
    <h1>Ma plateforme d'annonces</h1>
    <p>
        Ce projet est propulsé par Symfony,
        et construit grâce au MOOC OpenClassrooms et SensioLabs.
    </p>
    <p>
        <a class="btn btn-primary btn-lg" href="{{ path('oc_platform_accueil_core') }}">
            Retourner sur la page d'accueil principale »
        </a>
    </p>
{% endblock %}

{% block core_menu_gauche_block %}
    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Les annonces</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('oc_platform_home') }}">Accueil</a></li>
                <li><a href="{{ path('oc_platform_add') }}">Ajouter une annonce</a></li>
                <li><a href="{{ path('oc_platform_annonce_reseau') }}">Voir les annonces réseau</a></li>
                <li><a href="{{ path('oc_platform_last_candidatures') }}">Voir les 3 dernières candidatures</a></li>
            </ul>

            <h3>Dernières annonces</h3>
                {{ render(controller("OCPlatformBundle:Advert:menu", {'limit': 3})) }}
        </div>
        <div id="content" class="col-md-9">
            {% block ocplatform_body %}
                {{ render(controller("OCPlatformBundle:Advert:index")) }}
            {% endblock %}
        </div>
    </div>
{% endblock %}